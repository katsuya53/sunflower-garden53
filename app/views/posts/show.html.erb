<%= render "shared/header" %>

<div class="show-wrap">
<div class="main-title">
  詳細画面
</div>


<div class="whow-area">

<div class='post-contents'>
    <%= image_tag @post.image, class: "post-img" %>
   
    <div class='post-title'>
      <%= @post.post_title %>
    </div>

    <div class='post-text'>
      <%= @post.post_text %>
    </div>

   <div class= "post-info">
    <div class='post-poster'>
       <%= image_tag @post.user.image, class: "post-icon-image" %>
       <%= @post.user.nickname %>
      <div class="post-san">
         さん
      </div>
 
      <div class='post-date'>
        <%= @post.created_at.strftime("%Y.%m.%d %H:%M") %>
      </div>

      <div class="iine-area">
        <div class="iine-icon-image">
          <img src="/assets/iine.png" alt="いいね">
        </div>
        <div class="iine-count">5
        </div>
      </div>

    </div>

  </div>

  </div>



</div>
</div>
<%= render "shared/second-footer" %>