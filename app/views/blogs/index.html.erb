<%= render "shared/second-header" %>

<div class="blog-toppage">
   <%= render "shared/side_bar_hidden" %>

  <h1 class="blog-title">カレンダー</h1>
  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="blog-schedule">今後の予定一覧</div>
      <table class="blog-table">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>日程</th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= link_to blog.blog_title, blog %></td>
              <td><%= blog.start_time.strftime("%-m/%-d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_with(model: @blog, local: true) do |form| %>
        <div class="blog-title">
          <div class="blog-form-tag">タイトル</div>
          <%= form.text_area :blog_title, rows: 1, style: 'resize: none;' %>
        </div>

        <div class="blog-content">
          <div class="blog-form-tag">内容</div>
          <%= form.text_area :blog_text, rows: 4 %>
        </div>

        <div class="blog-time">
          <div class="blog-form-tag">時間</div>
          <%= form.date_select :start_time, class: 'your-css-class' %>
        </div>

        <div class="blog-submit">
          <%= form.submit "登録する" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8">
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>

        <% blogs.each do |blog| %>
          <div>
            <%= link_to blog.blog_title, blog %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/second-footer" %>