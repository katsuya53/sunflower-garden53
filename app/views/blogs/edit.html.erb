<style>
  .blog-show {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    color: #333;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .blog-show p {
    margin-bottom: 15px;
  }

  .blog-show strong {
    color: #007bff;
  }

  .blog-show a {
    color: #28a745;
    text-decoration: none;
    margin-right: 15px;
    display: inline-flex;
    align-items: center;
  }

  .blog-show a:hover {
    text-decoration: underline;
  }

  form {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    margin: 0 auto;
  }

  .blog-title, .blog-text, .blog-time {
    margin-bottom: 20px;
  }

  .form-tag {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
    color: #007bff;
  }

  input[type="text"], select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }

  .submit {
    text-align: center;
    margin-top: 20px; /* ボタンとフォームの間に余白を追加 */
  }

  input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  input[type="submit"]:hover {
    background-color: #0056b3;
  }
</style>

<%= form_with(model: @blog, local: true) do |form| %>

  <div class="blog-title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :blog_title %>
  </div>


  <div class="blog-text">
    <div class="form-tag">内容</div>
    <%= form.text_field :blog_text %>
  </div>

    <div class="blog-time">
    <div class="form-tag">時間</div>
    <%= form.date_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit "修正する" %>
  </div>

<% end %>
