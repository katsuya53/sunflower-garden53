<%= render "shared/second-header" %>

<div class="total-wrapper">
  <%= form_with model: @user, id: 'user-new_post', url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>ユーザー新規登録</h1>
    </div>

    <%= render 'layouts/error_messages', model: @user %>  <!-- ログイン時のエラーメッセージ  -->
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <div id="previews">   <!--プレビュー画像を表示--->
        </div>
        <label class="form-text">アイコン画像</label>
      </div>
      <%= f.file_field :image, id:"item-image" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) はなこ", maxlength:"6" %>
     <p class='info-text'>※6文字以内</p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">都道府県</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
    </div>
  
    <div class="form-group">
      <h2 class='form-bottom-text'>
      登録した情報はマイページから<BR>いつでも編集できます<BR>
      </h2>
    </div>

    <div class='register-btn'>
      <span class="indispensable">下記のボタンを押すと認証メールが届きますので 
        sunflower53garden@gmail.com<BR>
        からのメールが届くようにして下さい。</span>
      <%= f.submit "新規登録" ,class:"register-new-btn" %>
    </div>
 
  </div>
  <% end %>
</div>

<%= render "shared/second-footer"%>
