<%= render "shared/second-header" %>

<div class="record-show-wrap">
  
  <div class='show-form-header'>
    <h1 class='show-form-header-text'>日記 詳細画面</h1>
  </div>

  <div class="record-show-category">
    <%= @record.category.category_name %>
  </div>

  <div class='record-show-content'>
    <%= image_tag @record.record_image, class: "record-show-img" %>
  </div>

  <div class="record-show-info">
    <div class="record-show-text">
      <%= @record.record_text %>
    </div>
    <div class="record-show-date">
      <%= @record.posted_at.strftime("%Y/%m/%d %H:%M") %>
    </div>
  </div>

      
  <div class="record-form-group">
  
    <%= link_to "戻る", records_path, class: "record-green-btn" %>
    <%= link_to "日記を編集", edit_record_path(@record), class: "record-green-btn" %>
  </div>
  
  <div class= "btn-area">
    <%= button_to "日記を削除する", record_path(@record), method: :delete, class: "delete-post-btn", onclick: "return confirm('本当に削除しますか？');"  %>
  </div>

</div>

<%= render "shared/second-footer" %>