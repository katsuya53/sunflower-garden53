<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
    <%= link_to image_tag("header-sunflower.png", class:"header-sunflower-img"), "/" %>
    
<div class="header-wrapper">
  <div class="header-bar-left">

    <!-- 検索フォームのコード -->
  <%= form_with(url: search_posts_path, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿からキーワード検索します", class: "input-box" %>
    <%= form.button class: "search-button" do %>
      <%= image_tag("search.png", class: "search-icon") %>
    <% end %>
  <% end %>
  <div class="search-text">検索</div>

  </div>
  <div class="header-bar-right">
    <ul class='user-link'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>



    

</header>