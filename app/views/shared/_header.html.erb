
<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <%= link_to image_tag("header-sunflower.png", class:"header-sunflower-img"), "/" %>
    <%= image_tag("menu-btn.png", class: "menu-btn", id: "menu" ) %>
  <div class="header-wrapper">
    <div class="header-bar-left">

      <!-- 検索フォーム -->
      <%= form_with(url: search_posts_path, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿から検索", class: "input-box" %>
        <%= form.button class: "search-button" do %>
          <%= image_tag("search.png", class: "search-icon") %>
        <% end %>
      <% end %>
      <div class="search-text">検索
        <span class='top-flash-message'>  <!-- エラーや通知を白字で表示 -->
          <%= flash[:notice] %>
          <%= flash[:alert] %>
          <%= flash[:success] %>
          <%= flash[:danger] %>
        </span>
      </div>
    </div>

      <!-- ログイン管理 -->
    <div class="header-bar-right">
      <div class="user-link">
        <% if user_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } ,class: "logout" %>
        <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "login" %>
        <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
        <% end %>
      </div>
    </div>

  </div>
  
</header>