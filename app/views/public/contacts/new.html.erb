<%= render "shared/third-header" %>
<div class="post-show-wrap">


    
    <div class="mb-2">
      <%= flash[:alert] %>
    </div>

      <%= form_with model: @contact, url: public_contacts_path,  class: "contact-form", local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前' %>
          <%= f.text_field :name, autofocus: true, class: 'contact-input-form' %>
        </div>

        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><span class="contact-text-danger">お間違えのないようにお願いします</span>
          <%= f.email_field :email, class: 'contact-input-form' %>
        </div>

        <div class="form-group">
          <%= f.label :subject, '件名' %>
          <%= f.text_area :subject, class: 'contact-input-form' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= f.text_area :message, size: '10x10', class: 'contact-content-form' %>
        </div>

        <div>
          <%= f.submit '送信する', class: "contact-send-btn" %>
        </div>
      <% end %>

  
</div>

<%= render "shared/second-footer" %>